{
  "plugins": [
    "import",
    "jest",
    "jasmine"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jasmine/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.0"
    },
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.config.dev.js"
      }
    }
  },
  "rules": {
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "import/no-unresolved": ["error", { "caseSensitive": true } ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-unused-vars": "warn",
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "strict": [
      "error",
      "safe"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/spec/**/*.js",
        "**/test/**/*.js"
      ],
      "env": {
        "node": true,
        "jasmine": true,
        "jest/globals": true
      },
      "rules": {
        "jasmine/no-unsafe-spy": "off",
        "jasmine/no-suite-dupes": [
          "warn",
          "branch"
        ],
        "jasmine/no-spec-dupes": [
          "warn",
          "branch"
        ],
        "jasmine/no-global-setup": "off",
        "jest/prefer-to-have-length": "off"
      }
    },
    {
      "files": [
        "**/config/**/*.*",
        "**/scripts/**/*.js",
        "**/*.config.js"
      ],
      "env": {
        "node": true,
        "browser": false
      },
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "no-console": "off"
      }
    }
  ]
}